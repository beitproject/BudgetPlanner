<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/balance_txntype_textview"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/balance_txnamt_textview"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/balance_date_textview"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/balance_category_textview"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/balance_txntype_textview" />

    <TextView
        android:id="@+id/balance_baltitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balance_txnamt_textview"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/balance_balance_textview"
        android:text="Balance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/balance_balance_textview"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/balance_date_textview"
        android:layout_below="@+id/balance_date_textview"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>