<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:fitsSystemWindows="true"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="planner.budget.budgetplanner.MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="70dp"
                    android:id="@+id/graph"/>


                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/pie_chart"/>

                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="34dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="1.0">


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card1"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/p1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="@string/prediction"

                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:text="@string/_5500_rs"
                                android:textSize="30sp"
                                android:textAlignment="center"/>
                        </LinearLayout>



                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/p2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="@string/Budget_label"

                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:text="@string/Budgetamt"
                                android:textSize="30sp"
                                android:textAlignment="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="@string/edit_label"
                                android:textAlignment="viewEnd"
                                android:textSize="15sp"
                                android:layout_marginEnd="4dp"/>

                        </LinearLayout>



                    </android.support.v7.widget.CardView>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="34dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="1.0">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card3"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/p3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/spend_Label"

                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card4"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/p4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/top_spend_label"

                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        android:name="planner.budget.budgetplanner.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>


