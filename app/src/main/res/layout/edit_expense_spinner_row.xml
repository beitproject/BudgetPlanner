<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edit_expense_spinner_imageview"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/vc_others"/>

    <TextView
        android:id="@+id/edit_expense_spinner_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_expense_spinner_imageview"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/edit_expense_spinner_imageview"
        android:gravity="center"
        android:text="Others"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:paddingRight="20dp" />
</RelativeLayout>