<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/list_imageview_icon"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vc_acc_to_acc"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/list_textview_desc"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_imageview_icon"
        android:gravity="center"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/list_textview_category"
        android:layout_below="@id/list_textview_desc"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Category"
        android:textColor="@android:color/black"
        android:layout_marginStart="50dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/list_textview_amount"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_above="@+id/list_textview_category"
        android:layout_toEndOf="@+id/list_textview_desc"
        android:gravity="center"
        android:text="Amount"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/list_textview_date"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/list_textview_category"
        android:layout_toEndOf="@+id/list_textview_category"
        android:gravity="center"
        android:text="Date"
        android:textColor="@android:color/black" />

</RelativeLayout>